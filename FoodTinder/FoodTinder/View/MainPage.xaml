<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FoodTinder.View.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Food Tinder Main"
    BackgroundImageSource="BurgerAndFries.jpg"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Image
                Margin="0,30,0,0"
                Scale="0.8"
                Source="FoodSwipe.png" />
            <StackLayout
                x:Name="FirstView"
                IsVisible="false"
                VerticalOptions="CenterAndExpand">
                <Entry Placeholder="Number of users" />
                <Button Text="Done" />
            </StackLayout>
            <StackLayout
                Margin="0,-150,0,0"
                Padding="15"
                BackgroundColor="#89000000"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand">
                <Label
                    Margin="10"
                    FontAttributes="Bold"
                    FontSize="Large"
                    HorizontalTextAlignment="Center"
                    TextColor="WhiteSmoke">
                    Main Page
                </Label>
                <Button
                    BackgroundColor="DarkCyan"
                    Clicked="Swipe_Clicked"
                    Text="SWIPE" />
                <Button
                    BackgroundColor="DarkCyan"
                    Clicked="Add_Dish_Clicked"
                    Text="Add Dishes" />
                <Button
                    BackgroundColor="DarkCyan"
                    Clicked="Weekly_Clicked"
                    Text="Weekly Schedule" />
                <Button
                    BackgroundColor="DarkCyan"
                    Clicked="Preference_Clicked"
                    Text="Food Preference" />
                <Button
                    BackgroundColor="DarkCyan"
                    Clicked="Edit_Clicked"
                    Text="Edit Profile" />
            </StackLayout>
            <Label FontSize="12" HorizontalTextAlignment="Center">Made by Huy Tran</Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>